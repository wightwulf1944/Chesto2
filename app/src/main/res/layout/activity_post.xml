<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        style="@style/AppTheme.NavButton"
        android:layout_gravity="start|top"
        android:onClick="onUpButtonClicked"
        android:src="@drawable/ic_arrow_back" />

    <RelativeLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_peekHeight="?attr/actionBarSize"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <View
            android:id="@+id/bottomSheetHeader"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="0"
            android:background="?attr/colorPrimary" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottomSheetHeader">

            <shiro.am.i.chesto.activityPost.TagLayout
                android:id="@+id/tagLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />

        </android.support.v4.widget.NestedScrollView>


        <ImageButton
            android:id="@+id/infoButton"
            style="@style/AppTheme.NavButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onInfoButtonClicked"
            android:src="@drawable/ic_info" />

        <ImageButton
            android:id="@+id/downloadButton"
            style="@style/AppTheme.NavButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="onDownloadButtonClicked"
            android:src="@drawable/ic_download" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>