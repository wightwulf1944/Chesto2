<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shiro.am.i.chesto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Chesto"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activityMain.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activityPost.PostActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activityMain.MainActivity"
            android:theme="@style/AppTheme.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activityMain.MainActivity" />
        </activity>

        <activity
            android:name=".activitySearch.SearchActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activityMain.MainActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activityMain.MainActivity" />
        </activity>

        <service android:name=".serviceImageDownloader.ImageDownloaderService" />

    </application>

</manifest>